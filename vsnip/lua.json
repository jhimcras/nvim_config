{
    "function": {
        "prefix": "func",
        "body": [
            "function ${1:name}(${2:args})",
            "    $0",
            "end"
        ]
    },

    "Indexed container for statement": {
        "prefix": "fori",
        "body": [
            "for ${1:idx}, ${2:val} in ipairs(${3:cont}) do",
            "    $0",
            "end"
        ]
    },

    
    "Key value for statement": {
        "prefix": "forp",
        "body": [
            "for ${1:key}, ${2:val} in pairs(${3:cont}) do",
            "    $0",
            "end"
        ]
    },

    "for": {
        "prefix": "for",
        "body": [
            "for ${1:i}=${2:1}, ${3:N} do",
            "    $0",
            "end"
        ]
    },

    "If statement": {
        "prefix": "if",
        "body": [
            "if ${1:conditions} then",
            "    $0",
            "end"
        ]
    }
}
